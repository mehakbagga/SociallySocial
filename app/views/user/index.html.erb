<div class='container'>
  <div class='row'>
    <div class='col-8'>
      <div class='alert-box'></div>

      <% @posts.each do |post| %>
        <%= render partial: 'posts/post', object: post %>
      <% end %>
    </div>
    <div class='col-4'>
      <div class='d-flex mt-4'>
        <%= image_tag render_profile_picture(current_user.profileImg), size: '80x80', class: 'rounded-circle' %>
        <div class='align-self-center ml-2 text-left'>
          <p class='m-0'><%= current_user.full_name %></p>
          <p class='m-0 text-muted'><%= current_user.username %></p>
        </div>
      </div>

      <div class='followers-suggestions mb-2 border'>
        <%= link_to 'Add Story', story_path, class: 'float-right' %>
        <p class='text-muted'>Stories</p>
        <%= render 'stories' %>
      </div>

      <div class='followers-suggestions border'>
        <%= link_to 'Show All', '#', class: 'float-right' %>
        <p class='text-muted'>Suggestions for you</p>
        <%= render 'recommended_users' %>
      </div>
    </div>
  </div>
</div>
